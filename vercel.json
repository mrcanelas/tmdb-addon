{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "addon/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "^/request_token$", "dest": "/addon/server.js" },
    { "src": "^/session_id$", "dest": "/addon/server.js" },
    { "src": "^/trakt_auth_url$", "dest": "/addon/server.js" },
    { "src": "^/trakt_access_token$", "dest": "/addon/server.js" },
    { "src": "^/api/(.*)", "dest": "/addon/server.js" },
    { "src": "^(.*)/manifest\\.json$", "dest": "/addon/server.js" },
    { "src": "^(.*)/catalog/(.*)", "dest": "/addon/server.js" },
    { "src": "^(.*)/meta/(.*)", "dest": "/addon/server.js" },
    { "src": "^/configure/oauth-callback", "dest": "/index.html" },
    { "src": "^/configure/(.*)", "dest": "/$1" },
    { "src": "^/configure$", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/addon/server.js" }
  ]
}
